<config>
	<tabs>
	    <catalog translate="label" module="agora">
	        <label>Catalog</label>
	        <sort_order>10</sort_order>
	    </catalog>
	</tabs>
	<sections>
		<agora translate="label" module="agora">
			<label>Agora</label>
			<tab>Catalog</tab>
			<frontend_type>text</frontend_type>
			<sort_order>250</sort_order>
			<show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<options translate="label">
            		<label>Agora configuration</label>
            		<frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    	<enable_agora_product_list translate="label">
                    		<label>Enable Agora reviews in product list</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                    	</enable_agora_product_list>
                    	<enable_agora_product_view translate="label">
                    		<label>Enable Agora reviews in product view</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                    	</enable_agora_product_list>
                    	<enable_agora_product_list_crossell translate="label">
                    		<label>Enable Agora crossell in product view</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                    	</enable_agora_product_list>
                    </fields>
            	</options>
            </groups>
		</agora>
	</sections>
</config>